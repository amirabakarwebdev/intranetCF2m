{# on étend le template depuis base.html.twig, qui est donc son parent #}
{% extends "template.html.twig" %}

{# on veut surcharger le title, on utilise le bloc, on récupère le contenu du parent {{ parent() }} et on rajoute notre texte #}

{% block title %}{{ parent() }} | Accueil linscription{% endblock %}


{% block menuhaut %}

{% endblock %}

{% block centre %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>

                <p class="lead">Gestion de linscription</p>



            </div>
            <div  class="col-lg-12 text-center">
            <h4><a href="?ajouterlinscription">Ajouter une inscription</a></h4>

                <br>
                <div class="col-lg-12 text-left">
                    <div class="pagination">
                        {{ pagination|raw }}<br>
                    </div>

            <br>
            <div class="col-lg-12 text-left">
                {# Faites apparaître les inscriptions (celles du menu) cliquables dans un nouveau h4, sinon écrivez "Pas encore d'éléments dans le menu" #}
                {% for item in detailinscription %}
                    <div class="section col-lg-12">
                    <div class="content-menu">
                        <a href="?updatelinscription={{ item.idlinscription }}" class="modified">modifier</a>  
                        <a class="delete" href="javascript:if(window.confirm('Voulez-vous supprimer cette inscription ?')) location='./?deleteLinscription={{ item.idlinscription }}';">supprimer</a>
                    </div>
                    </h4>

                    <h3>{{ item.lenomutilisateur }}</h3>
                    <h6>{{ item.lenom }}</h6>
                    <p>Début : {{ item.debut }}</p>
                    <p>Fin : {{ item.fin }}</p> 
                    </div>

                {% else %}
                <h4 class="mt-3">Pas encore d'inscription sur notre page accueil</h4>
                {% endfor %}
            </div>
        </div>
</main>

{% endblock %}

{% block bas %}
{% include "footer.html.twig" %}
{% endblock %}
