
{% extends "template.html.twig" %}


{% block title %}
    {{ parent() }}
    | Admin | Supprimer un utilisateur
{% endblock %}



{% block milieu %}
    <!-- Page Content -->
    <main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Supprimer un utilisateur </h1>
            </div>

            <br><br><br> <br><br><br> <br><br><br>
            <div
                class="col-lg-6 text-left">
                {# Affichage du formulaire #}
                <h1>Confirmez la suppression de :<br><br>
                    {{ afficheuser.lenom|capitalize ~ "."~ afficheuser.leprenom|capitalize  }}</h1>
                    <h4>{{ afficheuser.lintitule }}</h4>
                <div>
                 <br><br>
                    <a type="button" href="?deleteuser={{ afficheuser.idlutilisateur }}&ok" class="btn btn-primary">Supprimer</a>

                    <a type="button" href="?viewutilisateur" class="btn btn-secondary">Annuler</a>
                </div>

                <h3>{{ error }}</h3>
            </div>
        </div>
    </main>

{% endblock %}

{% block bas %}
    {% include "footer.html.twig" %}
{% endblock %}
