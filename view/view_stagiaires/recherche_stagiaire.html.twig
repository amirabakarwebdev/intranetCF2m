    <!-- 1. On ajoute la librairie jQuery -->
        <script src="jquery-3.3.1.js"></script>
		
		<!-- 2. On ajoute la librairie jQuery UI -->
		<script src="jquery-ui/jquery-ui.js"></script>
		
		<!-- 3. Notre script qui utilise jQuery et jQueryUI -->
		<script type="text/javascript">
			
			$("input#stagiaire").autocomplete({
				source : function(request, response) {
					$.ajax({
						url: "choixstagiaire.php",
						type: "POST",
						dataType:"json",
						data : {
							param : $("#stagiaire").val()
							},
						complete: function(resultat, status) {
							console.log("COMPLETE : "+ status);
							},
						success: function(resultat) { 
							console.log("SUCCESS : " + resultat);
							response(resultat);
							},
						error: function(resultat, status, erreur) {
							console.log(erreur);
							}	
					});
				}
			});
			
		</script>


