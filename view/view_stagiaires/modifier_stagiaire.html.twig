{# on étend le template depuis base.html.twig, qui est donc son parent #}
{% extends "template.html.twig" %}

{# on veut surcharger le title, on utilise le bloc, on récupère le contenu du parent {{ parent() }} et on rajoute notre texte #}
{% block title %}{{ parent() }} | Admin | Modifier le stagiaire{% endblock %}

{% block menuhaut %}

{% endblock %}

{% block centre %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>
                <p class="lead">Modifier le Stagiaire</p>
            </div>
            <div class="col-lg-6 text-left">
                {# Affichage du formulaire #}
                
                    <form action="" method="post" name="updateLeStagiaire">
                    <input name="lenom" type="text" placeholder="nom de famille" value="{{ section.nomFamille }}" required><br>
                    <textarea name="leprenom" placeholder="le prenom" required>{{ section.leprenom }}</textarea><br>
                    <textarea name="lemail" placeholder="lemail" required>{{ section.lemail }}</textarea><br>

                    <textarea name="lafiliere" placeholder="lafiliere" required>{{ section.filiereName }}</textarea><br>
                    <textarea name="lasession" placeholder="la session" required>{{ section.sessionName }}</textarea><br>
                    <textarea name="userName" placeholder="userName" required>{{ section.lenomutilisateur }}</textarea><br>

                    <input type="hidden" name="idlutilisateur" value="{{ section.idlutilisateur }}">
                    <input type="submit" value="Envoyer">
                </form>
                
                <h3>{{ error }}</h3>
            </div>
        </div>
</main>

{% endblock %}

